{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "noEmit": true,
    "baseUrl": "."
  },
  "lib": ["es2015"],
  "include": [
    "./src/**/*"
  ],
  "experimentalDecorators": true,
  "emitDecoratorMetadata": true,
  "resolveJsonModule": true,
  "typeRoots": [
    "src/types",
    "node_modules/@types"
  ]
}